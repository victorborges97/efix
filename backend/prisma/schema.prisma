generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Suggestion {
    id          Int          @id @default(autoincrement())
    errorCode   String       @unique() @db.Char(6)
    text        String
    evaluations Evaluation[]
}

model Evaluation {
    id         Int        @id @default(autoincrement())
    errorCode  String     @db.Char(6)
    date       DateTime
    clientCode String     @db.Char(6)
    evaluation Boolean
    comment    String?
    suggestion Suggestion @relation(fields: [id], references: [id])
}
